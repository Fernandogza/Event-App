<html>
  <head>
    <title>Eventos - ITESM</title>
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="../web/css/materialize.min.css"  media="screen,projection"/>
    <style>
      main, footer {
        padding-left: 240px;
      }
    </style>
    <meta charset="UTF-8"></meta>
  </head>
  <body class="white">
    <header>
      <nav class="top-nav teal lighten-2">
        <a href="#" data-activates="slide-out" class="button-collapse top-nav full show-on-large"><i class="mdi-navigation-menu"></i></a>
        <div class="container">
          <div class="nav-wrapper"><a class="brand-logo center">Profile</a></div>
        </div>
      </nav>
      <ul id="slide-out" class="side-nav">
        <li class="active"><a href="./profile.html"> <i class="small mdi-action-account-circle left"></i> Profile</a></li>
        <li><a href="./dashboard.html"> <i class="small mdi-action-dashboard left"></i> Dashboard</a></li>
        <li><a href="../chat"><i class="small mdi-communication-chat left"></i>Inbox</a></li>
        <div class="section" style="margin-top: 600px;">
            <div class="row">
              <div class="col s12"><a href="../logout" class="waves-effect waves-light btn black-text grey">logout</a></div>
            </div>
          </div>
      </ul>
    </header>
    <main>
      <div class="row">
        <div class="col s4 center">
          <div class="col s12">
            <h5>Username</h5>
          </div>
          <div class="col s12">
            <i class="large mdi-action-account-box"></i>
          </div>
          <div class="col s12">
            <a href="#!">Change Pic</a>
          </div>
        </div>
        <div class="col s4">
          <h4 class="left">Personal Information:</h4>
          <table>
            <thead>
            </thead>
            <tbody>
              <tr>
                <td>Name:</td>
                <td>{{ firstName }} {{lastName}}</td>
              </tr>
              <tr>
                <td>E-mail:</td>
                <td>{{email}}</td>
              </tr>
              <tr>
                <td>Additional Info:</td>
                <td>Extra Info</td>
              </tr>
              <tr>
                <td>
                  <form action="" method="POST">
                    <input type="hidden" name="_METHOD" value="DELETE" />
                    <input type="submit" value="Delete profile" />
                  </form>
                </td>
              </tr>
              <tr>
                <td><a href="#!">Change E-mail Address</a></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </main>
    <script src="../web/js/jQuery.min.js"></script>
    <script type="text/javascript" src="../web/js/materialize.min.js"></script>
    <script>
      $(document).ready(function(){
         $(".button-collapse").sideNav();
      });
    </script>
  </body>
</html>
